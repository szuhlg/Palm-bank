<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/s1"
    android:weightSum="1">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.111">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="掌上银行"
            android:id="@+id/textView"
            android:phoneNumber="false"
            android:background="#9c9c9c"
            android:gravity="center" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.389"
        android:weightSum="1"
        android:id="@+id/s2">

        <ImageButton
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:id="@+id/imageButton"
            android:layout_weight="0.5"
            android:background="@drawable/saoyisao" />

        <ImageButton
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:id="@+id/imageButton2"
            android:layout_gravity="center_vertical"
            android:layout_weight="0.5"
            android:background="@drawable/fukuanma" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="center_horizontal"
        android:layout_weight="0.389"
        android:id="@+id/s3"
        android:weightSum="1">

        <ImageButton
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:id="@+id/imageButton3"
            android:layout_weight="0.5"
            android:layout_gravity="center_vertical"
            android:background="#ffffff"
            android:src="@drawable/xianjin" />

        <ImageButton
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:id="@+id/imageButton4"
            android:layout_gravity="center_vertical"
            android:layout_weight="0.5"
            android:background="#ffffff"
            android:src="@drawable/zhuanzhang" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="center_horizontal"
        android:layout_weight="0.111"
        android:id="@+id/s4"
        android:weightSum="1">

        <ImageButton
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:id="@+id/imageButton5"
            android:layout_weight="0.2"
            android:background="@drawable/huiyuanyewu1" />

        <ImageButton
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:id="@+id/imageButton6"
            android:layout_weight="0.2"
            android:background="@drawable/zishenyewu0" />

        <ImageButton
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:id="@+id/imageButton7"
            android:layout_weight="0.2"
            android:background="@drawable/chongzhiyewu0" />

        <ImageButton
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:id="@+id/imageButton9"
            android:layout_weight="0.2"
            android:background="@drawable/jingyingweizhi0" />

        <ImageButton
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:id="@+id/imageButton8"
            android:layout_weight="0.2"
            android:background="@drawable/shezhi0" />
    </LinearLayout>

</LinearLayout>

